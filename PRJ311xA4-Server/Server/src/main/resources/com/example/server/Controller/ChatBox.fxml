<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.server.Controller.ChatBoxController">

    <VBox AnchorPane.topAnchor="10"  AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10">
        <TextArea fx:id="txtContent" prefHeight="344.0" prefWidth="600.0"/>
        <HBox spacing="10">
            <padding>
                <Insets top="10"/>
            </padding>
            <TextField fx:id="txtMessage" layoutY="359.0" prefHeight="27.0" prefWidth="510.0"/>
            <Button fx:id="btnSend" onAction="#btnSendActionPerformed" layoutX="527.0" layoutY="359.0" mnemonicParsing="false"
                    text="Send"/>
        </HBox>
    </VBox>
</AnchorPane>